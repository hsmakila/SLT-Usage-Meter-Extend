{
    "manifest_version": 4,
    "name": "SLT Usage Meter Extend",
    "version": "1.0",
    "description": "Enhances the SLT website to show additional internet usage insights.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["https://myslt.slt.lk/boardBand/summary"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["tabs"]
}
